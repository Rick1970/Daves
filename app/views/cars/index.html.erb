<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Vin</th>
      <th>Year</th>
      <th>Make</th>
      <th>Model</th>
      <th>Load</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.vin %></td>
        <td><%= car.year %></td>
        <td><%= car.make %></td>
        <td><%= car.model %></td>
        <td><%= car.load.user_id %></td>
        <td><%= link_to 'Show', car, class: 'btn btn-info btn-xs' %></td>
        <td><%= link_to 'Edit', edit_car_path(car), class: 'btn btn-primary btn-xs' %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Car', new_car_path, class: 'btn btn-primary btn-xs' %>
